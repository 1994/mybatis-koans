<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
          PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
          "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="net/thornydev/mybatis/koan/config.properties">
  </properties>

  <typeAliases>
    <!-- TODO: FILL IN BLANK -->
<!--     <typeAlias type="__" alias="Actor" /> -->
<!--     <typeAlias type="net.thornydev.mybatis.koan.Actor" alias="Actor" /> -->
  </typeAliases>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC" />
      <dataSource type="POOLED">
        <property name="driver"   value="${driver}" />
        <property name="url"      value="${url}" />
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
<!--     <package name="net.thornydev.mybatis.koan.koan1.sql" /> -->
    <mapper resource="net/thornydev/mybatis/koan/koan02/sakila-mapper.xml"/>
  </mappers>
</configuration>