<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.thornydev.mybatis.koan.koan09.Koan09Mapper">
  
  <resultMap id="countryResultMap" type="Country">
    <id property="id" column="country_id" />
    <result property="country" column="country"/>
    <result property="lastUpdate" column="last_update"/>
  </resultMap>

  <select id="getCountryById" parameterType="int" resultMap="countryResultMap">
    SELECT country_id AS id, country, last_update AS lastUpdate 
    FROM country 
    WHERE country_id = #{id}
  </select>

</mapper>
